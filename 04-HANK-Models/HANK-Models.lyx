\end{align*}

\end_inset

This implies
\begin_inset Formula 
\begin{align*}
g_{C_{t}} & =\sigma\frac{\gamma(s_{t}^{\ast},C_{t})^{-\sigma-1}\gamma_{Y}(s_{t}^{\ast},C_{t})}{\gamma(s_{t}^{\ast},C_{t})^{-\sigma}}=\sigma\frac{\gamma_{Y}(s_{t}^{\ast},C_{t})}{\gamma(s_{t}^{\ast},C_{t})}\Leftrightarrow\\
\frac{1}{\sigma}C_{t}g_{C_{t}} & =\frac{\gamma_{Y}(s_{t}^{\ast},C_{t})C_{t}}{\gamma(s_{t}^{\ast},C_{t})}=\varepsilon(s_{t},C_{t})
\end{align*}

\end_inset

and
\begin_inset Formula 
\begin{align*}
g_{C_{t+1}} & =-\sigma\frac{\mathbb{E}_{t}^{\ast}\left[(\gamma(s_{t+1},C_{t+1}))^{-\sigma-1}\gamma_{Y}(s_{t+1},C_{t+1})\right]}{\mathbb{E}_{t}^{\ast}\left[(\gamma(s_{t+1},C_{t+1}))^{-\sigma}\right]}\Leftrightarrow\\
\frac{1}{\sigma}C_{t+1}g_{C_{t+1}} & =\frac{\mathbb{E}_{t}^{\ast}\left[\gamma(s_{t+1},C_{t+1})^{-\sigma}\varepsilon_{t+1}(s_{t+1},C_{t+1})\right]}{\mathbb{E}_{t}^{\ast}\left[(\gamma(s_{t+1},C_{t+1}))^{-\sigma}\right]}
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
