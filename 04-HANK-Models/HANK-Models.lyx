\begin_inset Formula 
\begin{align*}
g_{R_{t}}dR_{t}+g_{C_{t}}dC_{t}+g_{C_{t+1}}dC_{t+1} & =0\Leftrightarrow\\
R_{t}g_{R_{t}}d\log R_{t}+C_{t}g_{C_{t}}d\log C_{t}+C_{t+1}g_{C_{t+1}}d\log C_{t+1} & =0
\end{align*}

