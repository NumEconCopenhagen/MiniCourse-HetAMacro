\begin_layout Itemize

\series bold
Amplification and propagation:
\series default
\size small

\begin_inset Formula 
\begin{align*}
\frac{d\log C_{t}}{d\log R_{t}}_{|d\log C_{t+1}=0} & =\frac{-\sigma}{\varepsilon(s_{t}^{\ast},C_{t})}\\
\frac{d\log C_{t}}{d\log C_{t+1}}_{|d\log R_{t}=0} & =\mathbb{E}_{t}^{\ast}\left[\frac{\gamma(s_{t+1},C_{t+1})^{-\sigma}}{\mathbb{E}_{t}^{\ast}\left[(\gamma(s_{t+1},C_{t+1}))^{-\sigma}\right]}\frac{\varepsilon(s_{t+1},C_{t+1})}{\varepsilon(s_{t}^{\ast},C_{t})}\right]
\end{align*}

